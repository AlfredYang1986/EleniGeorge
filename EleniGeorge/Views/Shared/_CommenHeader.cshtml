@model EleniGeorge.Models.AccountModel 

<script type="text/javascript">
    var isLandingPage = '@Model.isLandingPage'
</script>

@*Top header banner*@
<div id="top-header-banner" class="container-fluid">
    <div class="row">
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <div class="pull-left">
                <p>
                    FOLLOW US ON 
                    <span class="glyphicon glyphicon-search"></span>
                    <span class="glyphicon glyphicon-plus"></span>
                    <span class="glyphicon glyphicon-minus"></span>
                </p>
            </div>
        </div>
        <div id="mybag" class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <div class="pull-right">
                <p><span class="glyphicon glyphicon-lock"></span>My Bag(0): 0000.00</p>
            </div>
        </div>
    </div>
</div>

@*Logo banner area*@
<div id="logo-area-banner" class="container-fluid">
    <div class="row">
        <div class="col-xs-6 col-sm-6 col-md-3 col-lg-3">
            <div class="pull-left">
                Contact Details
            </div>
        </div>
        <div class="hidden-sm hidden-xs col-md-6 col-lg-6" id="logo-area">
            <p>ELENI GEORGE</p>
        </div>
        <div class="col-xs-6 col-sm-6 col-md-3 col-lg-3">
                @if (Model.isLogedIn)
                {
                    <p>WellCome, <a href="~/Home/Profile">@Model.screenName</a></p>
                    <div class="row" style="margin-top: 50px">
                        <a style="font-size: 0.9em" href="/Home/Profile">My Account</a>
                        <span>|</span>
                        <a style="font-size: 0.9em" href="/Home/ListOrders?ClientID=abcde">Saved Items</a>                                      
                        <span>|</span>
                        <a style="font-size: 0.9em" href="/Home/ShoppingBag?ClientID=abcde">My Bag</a>
                    </div>
                } 
                else 
                {
                    <button class="btn btn-link" id="reg">Join</button>
                    <span>|</span>
                    <button class="btn btn-link" id="sign">Sign In</button>                   
                }
        </div>
    </div>
</div>

