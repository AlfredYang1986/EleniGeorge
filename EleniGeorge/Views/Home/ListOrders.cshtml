@model EleniGeorge.Models.Orders.OrdersModel

@{
    ViewBag.Title = "ListOrders";
}

<div style="margin-bottom: 120px">

<h2 style="margin-left: 50px">SHOPPING BAG</h2>

<div style="margin-left: 30px; margin-right: 30px; width: 95%; height: 100%; border: 1px solid #808080">
</div>

<table border="1" width="95%" style="margin-left: 30px; margin-right: 30px">
	<tr style="border: 1px solid #808080; background-color: #808080">
        <th colspan="2">PRODUCTION DESCRIPTION</th>
        <th>QTY</th>
        <th>SUBTOTAL</th>
	</tr>

    @foreach (var item in @Model.items) 
    {
	    <tr style="border: 1px solid #808080; background-color: #fff">
            <td style="border: 1px solid #808080; padding: 30px 20px">@item.name</td>
            <td style="border: 1px solid #808080; padding: 30px 20px">@item.imgUrl</td>
            <td style="border: 1px solid #808080; padding: 30px 20px">1</td>
            <td style="border: 1px solid #808080; padding: 30px 20px">@item.price</td>
        </tr>
    }
</table>

<div class="pull-right" style="margin-right: 50px">
    <span>TOTAL : <span>@Model.items.First().price</span></span>
</div>

<table border="1" width="95%" style="margin-left: 30px; margin-right: 30px">
    <tr style="border: 1px solid #808080; background-color: #808080">
        <th colspan="2">ADDRESS</th>
	</tr>

    <tr>
        <td width="10%" style="text-align: center; border: 1px solid #808080; overflow: hidden"><input type="radio" /></td>
        <td width="90%" style="text-align: center; border: 1px solid #808080">UNIT1, 1 SYDNEY RD, BRUNSWICK, 3111</td>
    </tr>

    <tr>
        <td width="10%" style="text-align: center; border: 1px solid #808080"><input type="radio" /></td>
        <td width="90%" style="text-align: center; border: 1px solid #808080">UNIT1, 1 SYDNEY RD, BRUNSWICK, 3111</td>
    </tr>
</table>

<button class="btn">Edit/Add</button>

<table border="1" width="95%" style="margin-left: 30px; margin-right: 30px">
    <tr style="border: 1px solid #808080; background-color: #808080">
        <th colspan="3" style="text-align: center">PAYMENT DETAILS</th>
    </tr>

	<tr>
		<td style="text-align: center">
            <input style="width: 15px" name="radioGroup" value="visa" type="radio"><label>VISA</label>
		</td>
		<td style="text-align: center">
            <input style="width: 15px" name="radioGroup" value="master" type="radio"><label>MASTER CART</label>
		</td>
		<td style="text-align: center">
            <input style="width: 15px" name="radioGroup" value="paypal" type="radio"><label>PAYPAL</label>
		</td>
	</tr>

    <tr>
		<td style="text-align: center">Card Number</td>
		<td colspan="2" style="text-align: center"><input type="text" style="width: 60%"/></td>
    </tr>

    <tr>
		<td style="text-align: center">Cardholder Name</td>
		<td colspan="2" style="text-align: center"><input type="text" style="width: 60%"/></td>
    </tr>

    <tr>
		<td style="text-align: center">Start Date</td>
		<td colspan="2" style="text-align: center"><input type="text" style="width: 60%"/></td>
    </tr>

    <tr>
		<td style="text-align: center">End Date</td>
		<td colspan="2" style="text-align: center"><input type="text" style="width: 60%"/></td>
    </tr>
</table>
</div>